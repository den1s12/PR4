<Window x:Class="PR8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TextBox x:Name="inNum" HorizontalAlignment="Left" Height="57" Margin="117,50,0,0" TextWrapping="Wrap" Text="Введите число" VerticalAlignment="Top" Width="160"/>
        <TextBlock x:Name="outNum" Margin="117,140,515,0" TextWrapping="Wrap" Text="Ответ" VerticalAlignment="Top" Height="57" Width="160"/>
        <RadioButton Content="BIN" HorizontalAlignment="Left" Margin="140,202,0,0" VerticalAlignment="Top" IsChecked="False" Checked="RadioButton_Checked"/>
        <RadioButton Content="OCT" HorizontalAlignment="Left" Margin="140,272,0,0" VerticalAlignment="Top" IsChecked="False" Checked="RadioButton_Checked" RenderTransformOrigin="0.619,1.667"/>
        <RadioButton Content="HEX" HorizontalAlignment="Left" Margin="140,237,0,0" VerticalAlignment="Top" IsChecked="False" Checked="RadioButton_Checked" RenderTransformOrigin="0.659,1.067"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="365,205,0,0" VerticalAlignment="Top" Width="243" Height="84" Click="Button_Click"/>


    </Grid>
</Window>
